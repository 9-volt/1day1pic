<div class="container">
  <h1>{{date_format post.date}}</h1>{{post.title}}
  {{#if post.title}}<h2>{{post.title}}</h2>{{/if}}

  {{> picture picture1}}
  {{> picture picture2}}

  <ul class="pager pager-align">
    {{#if previousPostLink}}<li class="previous"><a href="{{previousPostLink}}">&larr; Older</a></li>{{/if}}
    {{#if nextPostLink}}<li class="next"><a href="{{nextPostLink}}">Newer &rarr;</a></li>{{/if}}
  </ul>

</div>
